

RewriteEngine On

RewriteEngine On
RewriteBase /

# Permitir acesso a ficheiros estáticos
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Redirecionar raiz para index.html
RewriteRule ^$ index.html [L]
RewriteRule ^index.html$ index.html [L]

# Bloquear listagem de diretórios
Options -Indexes

# Bloquear acesso direto à pasta data e ficheiros sensíveis
RewriteRule ^data/ - [F]
<FilesMatch "\.(json|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# API Routes
RewriteRule ^request-key/?$ request-key.php [L]
RewriteRule ^calculate/?$ calculate.php [L]
RewriteRule ^info/?$ info.php [L]
RewriteRule ^admin-login/?$ admin-login.php [L]
RewriteRule ^admin-keys/?$ admin-keys.php [QSA,L]
RewriteRule ^admin-keys/([^/]+)/block/?$ admin-keys.php?key=$1&action=block [QSA,L]
RewriteRule ^admin-keys/([^/]+)/?$ admin-keys.php?key=$1 [QSA,L]

# Admin interface
RewriteRule ^admin.html$ admin.html [L]
